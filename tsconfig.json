{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./.vitepress/*"]
    },
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["**/*", ".vitepress/**/*"],
  "exclude": ["**/node_modules", "**/dist"]
}
